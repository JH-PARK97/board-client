{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "jsx": "react",
        "allowJs": true,
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "./dist",
        "moduleResolution": "Node",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "esModuleInterop": true,
        "strict": true,
        "types": ["vite/client", "vite-plugin-svgr/client"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
